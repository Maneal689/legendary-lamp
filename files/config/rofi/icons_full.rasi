* {
  background-color: #00000000;
  text-color: #b8b8b8;
  font: "IBM Plex Sans Regular 20";
}

window {
  height: 100%;
  width: 100%;
  transparency: "real";
}

mainbox {
  children: [ inputbar, listview ];
  padding: 0% 5% 5% 5%;
  background-color: @bg;
  border: 0;
  border-radius: 0;
  border-color: @border;
}

listview {
  columns: 4;
  padding: 1%;
  spacing: 2%;
}

element {
  border: 0;
  border-radius: 15;
  text-color: @fg;
  orientation: vertical;
  padding: 2% 2% 2% 3%;
}

element selected {
  background-color: @bg-sel;
  border-radius: 15;
  border-color: @border;
  text-color: @fg;
}

inputbar {
  children: [entry];
  padding: 4 4 4 4;
  margin: 8% 30%;
  background-color: @find;
  border-radius: 15;
  border-color: @border;
}

prompt {
  enabled: false;
}

entry {
  font: "IBM Plex Sans Regular 12";
  text-color: #b8b8b8;
  padding: 8 12 8 12;
}
